<div class="card-deck-wrapper">
  <div class="card-deck">
    <div class="row">
      <% @channels.each do |channel| %>
        <div class="col-md-4 offset-md-1">
          <div class="card">
            <%= image_tag channel.name + ".jpg", class: "card-img-top", alt: "Card image" %>
            <div class="card-block">
              <h4 class="card-title"><%= channel.name %></h4>
              <p class="card-text"><%= channel.description %></p>
              <%= button_to "Subscribe!", subscriptions_path(channel_id: channel.id), method: :post, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <%= link_to "send", send_message_path(id: channel.id) %>
      <% end %>
    </div>
  </div>
</div>