<div class="card-deck-wrapper">
  <div class="card-deck">
    <% @channels.each do |channel| %>
      <div class="card">
        <%= image_tag channel.name + ".jpg", class: "card-img-top", alt: "Card image", size: "260x180" %>
        <div class="card-block">
          <h4 class="card-title"><%= channel.name %></h4>
          <p class="card-text"><%= channel.description %></p>
          <%= button_to "Subscribe!", subscriptions_path(channel_id: channel.id), method: :post, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>